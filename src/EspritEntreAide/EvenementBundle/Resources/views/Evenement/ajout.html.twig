{% extends ":default:test.html.twig" %}


{% block title %}Evenements{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
        #espritentreaide_evenementbundle_evenement_titreE,#espritentreaide_evenementbundle_evenement_descE{
            width: 50%;
            padding: 6px 10px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        #espritentreaide_evenementbundle_evenement_dateE_date_month{
            padding: 6px 10px;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }
        #espritentreaide_evenementbundle_evenement_dateE_date_day
        {
            padding: 6px 10px;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }
        #espritentreaide_evenementbundle_evenement_dateE_date_year
        {
            padding: 6px 10px;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }
        #espritentreaide_evenementbundle_evenement_dateE_time_hour
        {
            padding: 6px 10px;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }


        #espritentreaide_evenementbundle_evenement_dateE_time_minute
        {
            padding: 6px 10px;
            margin: 8px 0;
            border: 1px solid #ccc;
